!!!
%html(lang="ja")
  %head
    = partial 'partials/head'
  %body
    = partial "partials/narrow-header"
    #main(role="main")
      %article.post
        .post-header
          %h1.post-title
            = link_to current_article.title, current_article
          .post-meta
            %time(datetime="#{current_article.date}")
              = current_article.date.strftime("%Y/%m/%d")
          %ul.sns-share-buttons
            - post_url = "https://wakate.org/#{current_page.url}"
            %li
              %a.twitter-share-button{"data-hashtags" => "wakate#{current_article.date.year}",
                                      "data-lang" => "ja",
                                      "data-show-coun" => "",
                                      "data-text" => current_article.title,
                                      "data-url" => post_url,
                                      "data-via" => "is_wakate",
                                      :href => "https://twitter.com/share?ref_src=twsrc%5Etfw",
                                      :t => "false" } Tweet
              %script{:async => "", :charset => "utf-8", :src => "https://platform.twitter.com/widgets.js"}
            %li
              %iframe{:allow => "encrypted-media",
                      :allowtransparency => "true",
                      :eborder => "0",
                      :fram => "",
                      :height => "20",
                      :scrolling => "no",
                      :src => "https://www.facebook.com/plugins/share_button.php?href=#{CGI.escape(post_url)}&layout=but\nton_count&size=small&mobile_iframe=true&width=72&height=20&appId",
                      :style => "border:none;overflow:hidden",
                      :width => "72"}
            %li
              %a.hatena-bookmark-button{"data-hatena-bookma" => "",
                                        "data-hatena-bookmark-layout" => "basic-label-counter",
                                        :href => "http://b.hatena.ne.jp/entry/",
                                        "rk-lang" => "ja",
                                        :title => "このエントリーをはてなブックマークに追加"}
              %img{:alt => "このエントリーをはてなブックマークに追加",
                   :height => "20",
                   :src => "https://b.st-hatena.com/images/entry-button/button-only@2x.png",
                   :style => "border: none;",
                   :width => "20"}/
            %li
              .line-it-button{"data-lang" => "ja",
                              "data-type" => "share-a",
                              "data-url" => post_url,
                              :style => "display: none;"}
          %script{:async => "async",
                  :defer => "defer",
                  :src => "https://d.line-scdn.net/r/web/social-plugin/js/thirdparty/loader.min.js",
                  :type => "text/javascript"}
          %script{:async => "async",
                  :charset => "utf-8",
                  :src => "https://b.st-hatena.com/js/bookmark_button.js",
                  :type => "text/javascript"}
        .post-body
          = yield

    = partial "partials/sub-contents"
    = partial "partials/footer"
